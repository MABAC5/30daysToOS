     1 00000000                                 ; haribote-os
     2 00000000                                 ; TAB=4
     3 00000000                                 
     4 00000000                                 ;有关BOOT_INFO
     5  = 00000FF0                              CYLS	EQU		0x0ff0		;设定启动区
     6  = 00000FF1                              LEDS	EQU		0X0ff1
     7  = 00000FF2                              VMODE	EQU		0x0ff2		;有关颜色数目的信息，颜色的位数
     8  = 00000FF4                              SCRNX	EQU		0x0ff4		;分辨率的X
     9  = 00000FF6                              SCRNY	EQU		0x0ff6		;分辨率的Y
    10  = 00000FF8                              VRAM	EQU		0x0ff8		;图像缓冲区的开始地址
    11 00000000                                 
    12                                          		ORG		0xc200		;指定汇编语言地址运算的基地址(是系统文件在内存中的起始地址，保持一致)
    13 0000C200                                 		
    14 0000C200 B0 13                           		MOV		AL,0x13
    15 0000C202 B4 00                           		MOV 	AH,0x00
